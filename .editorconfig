root = true

[*]
charset = utf-8
end_of_line = lf

[{public/wp-content/themes/theme-folder-name/**/*.{php,js,scss}, webpack.config.js}]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[{node_modules}/**]
indent_style = ignore
indent_size = ignore
end_of_line = ignore
trim_trailing_whitespace = ignore
charset = ignore

[**/*.min.{js,css}]
indent_style = ignore
indent_size = ignore
end_of_line = ignore
trim_trailing_whitespace = ignore
charset = ignore
